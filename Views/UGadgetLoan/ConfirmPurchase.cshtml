@model LoanManagementSystem.ViewModel.PurchaseViewModel

<h2>Confirm Purchase</h2>

<div>
    <h4>@Model.GadgetName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
        <dt class="col-sm-2">Interest</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Interest)</dd>
        <dt class="col-sm-2">Payment Term</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PaymentTerm)</dd>
    </dl>
    <div class="form-group">
        <label for="ImpId">Select IMP ID:</label>
        @Html.DropDownListFor(model => model.ImpId, new SelectList(Model.ImpIds, "Value", "Text"), new { @class = "form-control" })
    </div>
    @if (Model.Payment != null)
    {
        <div class="form-group">
            <label for="Payment">Payment:</label>
            <p>@Model.Payment</p>
        </div>
    }
    <div>
        <form asp-controller="UGadgetLoan" asp-action="Purchase" method="post">
            <input type="hidden" asp-for="GadgetLoanId" value="@Model.GadgetLoanId" />
            <input type="hidden" asp-for="PaymentTerm" value="@Model.PaymentTerm" />
            <input type="hidden" asp-for="SelectedImpId" value="@Model.SelectedImpId" />
            <button type="submit" class="btn btn-primary">Confirm Purchase</button>
        </form>
    </div>
</div>

