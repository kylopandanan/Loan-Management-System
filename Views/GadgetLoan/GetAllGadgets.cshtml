@{

}


<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .card-img-top {
        position: relative;
        overflow: hidden;
        height: 300px;
    }

    .card-img-top img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        max-width: 100%;
        transition: transform 0.2s ease-in-out;
    }

        .card-img-top img:hover {
            transform: scale(1.4);
        }

    .card {
        border-radius: 30px;
        overflow: hidden;
        object-fit: cover;
    }

    .card-title{
        text-align: center;
    }

    .card-text-custom {
        height: 55px; /* Set a fixed height */
        overflow: hidden; /* Hide any overflowing text */
        text-overflow: ellipsis; /* Add ellipsis if the text overflows */
    }

    p {
        font-size: 12px;
    }

    btn{
        align-content: center;
    }
</style>

<div class="header-container">
    <h1>E- Pahiram (Micro-Loans) Gadget Loan</h1>
        @if (User.IsInRole("Administrator"))
        {
        <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="GadgetLoan">Add Gadget</a>
        }
</div>

@for (int i = 0; i < Model.Count; i += 3)
{
    <div class="row">
        @for (int j = i; j < Math.Min(i + 3, Model.Count); j++)
        {
            <div class="col-md-4 mt-3 mb-4">
                <div class="card">
                    <div class="card-img-top">
                        <img src="@Model[j].GadgetImageURL" alt="@Model[j].GadgetName" />
                    </div>
                    <div class="card-body bg-primary">
                        <h5 class="card-title fw-bold ls-tight text-light">@Model[j].GadgetName</h5>
                        <h6 class="card-text text-white">PHP @Model[j].Price</h6>
                        <p class="card-text card-text-custom text-white">@Model[j].Description</p>
                        <div class="d-flex align-items-center">
                            <a type="button" class="btn btn-light mt-1 mx-1" asp-controller="GadgetLoan" asp-action="Details" asp-route-gadgetId="@Model[j].Id">View</a>
                            @if (!(User.IsInRole("Administrator")))
                            {
                                <a type="button" class="btn btn-light mt-1" asp-controller="UGadgetLoan" asp-action="ConfirmPurchase" asp-route-gadgetId="@Model[j].Id">Purchase</a>
                            }
                            @if (User.IsInRole("Administrator"))
                            {
                                <a type="button" class="btn btn-light mt-1 mx-1" asp-controller="GadgetLoan" asp-action="Update" asp-route-gadgetId="@Model[j].Id">Edit</a>
                                <a type="button" class="btn btn-light mt-1 mx-1" asp-controller="GadgetLoan" asp-action="Delete" asp-route-gadgetId="@Model[j].Id">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }                  
    </div>    
}


























